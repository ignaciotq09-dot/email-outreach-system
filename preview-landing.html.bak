            animation: pulse-node 3s ease-in-out infinite;
        }
        
        .neural-line {
            stroke-dasharray: 5, 5;
            animation: dash 2s linear infinite;
        }
        
        @keyframes dash {
            to { stroke-dashoffset: -10; }
        }
